#!/usr/bin/env sh

############################################################
# Script to Update the CA-Certificates
############################################################

echo "Updating Root CA's from the Alpine Repository"

# Update CA-Certificates Package
apk update --no-cache ca-certificates

# Get custom Certificates
if [ -d "/etc/ssl/certs_custom" ]; then
	echo "Found custom Certificates!"
	
    # Convert from X to .PEM
	for f in /etc/ssl/certs_custom/*.crt
    do
		[ -e "$f" ] || continue
		FILE_PATH=$(basename "$f")
		FILE_EXT="${FILE_PATH##*.}"
		FILE_NAME="${FILE_PATH%.*}"
		
		# One of them should work
		echo "Installing $f ..."
	    openssl x509 -in "$f" -out "/etc/ssl/certs/$FILE_NAME.pem" -outform PEM
		openssl x509 -in "$f" -inform der -out "/etc/ssl/certs/$FILE_NAME.pem" -outform PEM
    done
	
	# Copy .PEM Files
	for f in /etc/ssl/certs_custom/*.pem
    do
		[ -e "$f" ] || continue
		FILE_PATH=$(basename "$f")
		FILE_EXT="${FILE_PATH##*.}"
		FILE_NAME="${FILE_PATH%.*}"
		
		# One of them should work
		echo "Installing $f ..."
		cp "$f" "/etc/ssl/certs/$FILE_NAME.pem"
    done
fi

# Update CA-Certificates based on the files in /etc/ssl/certs
echo "Generating new ca-certificates.crt file!"
update-ca-certificates
